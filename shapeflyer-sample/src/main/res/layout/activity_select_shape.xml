<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_select_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cipherthinkers.shapeflyer_sample.SelectShapeActivity">

    <Spinner
        android:id="@+id/path_spinner"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/shape_spinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/path_spinner"
        android:layout_marginTop="16dp"/>

    <com.cipherthinkers.shapeflyer.ShapeFlyer
        android:id="@+id/shape_flyer"
        android:layout_below="@+id/shape_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_marginTop="8dp"
        app:enable_alpha="true"
        app:enable_scale="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp"
            android:textColor="#FFFFFF"
            android:alpha="0.5"
            android:layout_centerHorizontal="true"
            android:text="Tap here to start animation!"
            android:paddingLeft="8dp"/>

    </com.cipherthinkers.shapeflyer.ShapeFlyer>


</RelativeLayout>
